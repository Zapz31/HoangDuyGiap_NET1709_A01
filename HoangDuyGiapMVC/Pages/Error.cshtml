@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="d-flex flex-column align-items-center justify-content-center vh-100 text-center">
    <h1 class="text-danger">You do not have permission</h1>
    <p class="text-muted">You are not authorized to view this page.</p>

    <div class="mt-3">
        <button onclick="goBack()" class="btn btn-secondary">Go Back</button>
        <a href="/" class="btn btn-primary">Go to Home</a>
    </div>
</div>

@section Scripts {
    <script>
        function goBack() {
            if (window.history.length > 1) {
                history.back();
            } else {
                window.location.href = "/";
            }
        }

        // Auto-redirect back after 3 seconds
        setTimeout(goBack, 3000);
    </script>
}