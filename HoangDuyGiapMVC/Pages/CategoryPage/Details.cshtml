@page
@model HoangDuyGiapMVC.Pages.CategoryPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["Title"] = "Create";
    string? email = HttpContext.Session.GetString("Email");
    int? role = HttpContext.Session.GetInt32("RoleId");

    if (email == null || ((role != 1)))
    {
        TempData["ErrorMessage"] = "You do not have permission to do this function";
        Response.Redirect("/Error");
    }
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryDesciption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryDesciption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.IsActive)
        </dt>
        <dd class="col-sm-10">
            @(Model.Category.IsActive == true ? "Active" : "Inactive")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.ParentCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.ParentCategory.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.CategoryId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
